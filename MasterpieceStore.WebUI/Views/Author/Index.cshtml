@model IEnumerable<MasterpieceStore.Domain.Entities.Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Authors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>BirthDate</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AuthorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AuthorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AuthorID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
        </tr>
    }

</table> 

